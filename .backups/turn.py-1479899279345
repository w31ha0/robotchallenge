import time
import brickpi
from config import *


def turn(degrees):
    angleFor90Deg = float(14.30)
    # angleFor90Deg = float(14.40)
    angleToTurn = (degrees / 90) * angleFor90Deg
    interface.increaseMotorAngleReferences(motors[0:1], [angleToTurn, -angleToTurn], [6, -6])
    while not interface.motorAngleReferencesReached(motors[0:1]):
        time.sleep(0.1)
    print 'Turning finished'
    
turn(90)
